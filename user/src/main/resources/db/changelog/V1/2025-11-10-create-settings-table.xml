<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="2025-10-11-create-settings-table" author="Egor">
        <createTable tableName="user_settings">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="language" type="varchar(20)" defaultValue="RU">
                <constraints nullable="false"/>
            </column>
            <column name="push_enabled" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="email_notifications" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="theme" type="varchar(20)" defaultValue="LIGHT">
                <constraints nullable="false"/>
            </column>
            <column name="payment_method" type="varchar(20)" defaultValue="CASH">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
